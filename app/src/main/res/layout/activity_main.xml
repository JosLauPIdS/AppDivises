<?xml version="1.0" encoding="utf-8"?>


<!--- Aquest arxiu defineix la interfície de l’aplicació -->

<!--- en aquest fitxer he d'afegir els widgets que calen -->




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!---tools:context="edu.ub.pis2016.jlauarma9.appdivises.MainActivity">  -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolars"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/edtDolars"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Euros"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/edtEuros"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbEurosADolars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Euros a Dolars" />

        <RadioButton
            android:id="@+id/rbDolarsAEuros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolars a Euros" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canvi a ..."
            android:textSize="24dip" />

        <EditText
            android:id="@+id/etCanvi"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnConvertir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convertir" />

    </LinearLayout>

</RelativeLayout>


